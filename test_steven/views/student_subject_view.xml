<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="student_subjects_view_form" model="ir.ui.view">
			<field name="name">student.subjects.view.form</field>
			<field name="model">student.subject</field>
			<field name="arch" type="xml">
				<form string="_form">
					<header>
			            <!-- <button name="" string="" class="oe_highlight" states="" type=""/> -->
			            <field name="is_approved" widget="statusbar" statusbar_visible="approved,disapproved" statusbar_colors="{'KEY_IS_STATE':'VALUE_IS_COLOR'}"/>
			        </header>
					<sheet>
						<div class="oe_title">
							<label for="name" class="oe_edit_only" />
							<h1>
								<field name="name" />
							</h1>
						</div>
						<group name="detail_group" string="Details">
							<field name="min_score" />
							<field name="max_score" />
							<field name="average" />
							<field name="student_id" />
							<field name="total_hours" />
						</group>
						<group name="scores_group" string="Scores">
							<field name="subject_scores_ids" widget="one2many_list" nolabel="1">
								<tree editable="top">
									<field name="name" />
									<field name="score" />
								</tree>
							</field>
						</group>
					</sheet>
					<div class="oe_chatter">
	                    <field name="message_follower_ids"/>
	                    <field name="activity_ids"/>
	                    <field name="message_ids"/>
	                </div>
				</form>
			</field>
		</record>
	</data>
</odoo>