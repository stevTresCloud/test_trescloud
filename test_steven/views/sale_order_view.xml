<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="enrollment_sale_order_view_form" model="ir.ui.view">
			<field name="name">enrollment.sale.order.view.form</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='payment_term_id']"
					position="after">
					<field name="is_new_enrollment" />
					<field name="enrollment_ids" 
						   widget="many2many_tags" 
						   options="{'no_open': False}" 
						   attrs="{'invisible': [('is_new_enrollment','=',False)]}"/>
				</xpath>
				<!-- <xpath expr="//field[@name='partner_id']" position="attributes"> 
					<attribute name="attrs">{'domain': }</attribute> </xpath> -->
			</field>
		</record>
	</data>
</odoo>